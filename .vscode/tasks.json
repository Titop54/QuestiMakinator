{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "setup-project",
            "type": "shell",
            "command": "${workspaceFolder}/setup.sh",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "build-release-linux",
            "type": "shell",
            "command": "${workspaceFolder}/launch.sh",
            "args": ["--linux", "--release"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "build-debug-linux",
            "type": "shell",
            "command": "${workspaceFolder}/launch.sh",
            "args": ["--linux", "--debug"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "build-debug-linux-no-config",
            "type": "shell",
            "command": "${workspaceFolder}/launch.sh",
            "args": ["--linux", "--no_config", "--debug"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
