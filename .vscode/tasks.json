        {
            "label": "build-debug-windows-no-config",
            "type": "shell",
            "command": "${workspaceFolder}/launch.sh",
            "args": ["--windows", "--no_config", "--debug"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "run-licences",
            "type": "shell",
            "command": "python3",
            "args": ["${workspaceFolder}/licences.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
