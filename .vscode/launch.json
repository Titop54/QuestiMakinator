    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Linux (lldb)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/QuestiMakinator",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Linux 2 (lldb)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/x64-linux/QuestiMakinator",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (simplest configuration)",
            "program": "${file}",
            "terminalKind": "integrated",
            "args": [
                "--windows"
            ]
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "--no_print"
        }
    ]
}